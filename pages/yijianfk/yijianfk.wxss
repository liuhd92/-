/* pages/yijianfk/yijianfk.wxss */
.container{
  overflow: hidden;
  width: 100%;
}
.input{
  width: 100%;
  position: relative;
  margin-bottom: 20rpx;
}
textarea{
  width: 100%;
  background: #fff;
  font-size:28rpx;
  color: #999;
  padding-left: 30rpx;
  height: 300rpx;
  padding-top: 30rpx;
}
.alert{
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  color: #999;
  font-size: 28rpx;
}
.phone{
  width: 100%;
}
.phone input{
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  display: block;
  color: #333;

}
button{
  border: none;
  background: #999;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 35rpx;
  border-radius: 10rpx;
  color: #fff;
}
