.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2ab4ff;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #2ab4ff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #2ab4ff;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.search-block {
    position: relative;
    z-index: 10;
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx 20rpx;
    background: #ffffff;
    border-bottom: 1rpx solid #C4C4C4;
}

.search-block .search-text {
    display: inline-block;
    width: 598rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #999999;
    font-size: 28rpx;
    background: #E7E7E7;
    border-radius: 100rpx;
    vertical-align: middle;
}

.search-block .search-text .search-icon {
    display: inline-block;
    margin: 15rpx 10rpx 15rpx 30rpx;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.search-block .search-text .search-input {
    display: inline-block;
    box-sizing: border-box;
    width: 480rpx;
    height: 60rpx;
    min-height: 60rpx;
    font-size: 28rpx;
    vertical-align: middle;
    color: #333333;
}

.search-block .search-text .clear-icon {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    margin: 16rpx 20rpx 16rpx 0;
    vertical-align: middle;
}

.search-block .cancel-btn {
    display: inline-block;
    font-size: 32rpx;
    padding-left: 20rpx;
    color: #333333;
    vertical-align: middle;
}

.search-result .result-item {
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 30rpx;
    background: #ffffff;
}

.search-result .result-item .result-text {
    width: 100%;
    position: relative;
    font-size: 32rpx;
    color: #333333;
}

.search-result .result-item .result-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    height: 1rpx;
    width: 100%;
    background: #F0F0F0;
}

.search-no-city {
    position: absolute;
    z-index: 5;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    box-sizing: border-box;
    padding-top: 140rpx;
    background: #ffffff;
}

.search-no-city image {
    width: 264rpx;
    height: 264rpx;
    display: block;
    margin: 60rpx auto 20rpx;
}

.search-no-city .no-city-text {
    display: block;
    font-size: 28rpx;
    color: #999999;
    text-align: center;
}

.hover {
    background-color: #f4f4f4;
}

.no-result {
    padding-top: 60rpx;
    text-align: center;
}

.no-result .no-result-icon {
    width: 264rpx;
    height: 264rpx;
    margin-bottom: 20rpx;
}

.no-result .no-result-text {
    font-size: 28rpx;
    color: #999999;
}