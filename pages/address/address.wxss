/* pages/adress/adress.wxss */
page{
  background: #e8e8e8;
}
image{
  display: block;
  width: 100%;
}
.container{
  height: auto;
  overflow: hidden;
}
.xzdz{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-top: 1rpx solid #ccc;
  background: #fff;
  
  padding-right: 20rpx;
}
.xzdz input{
  flex: 1;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #333;
}
.xzdz input.haveborder{
  border-right: 1rpx solid #ccc;
}
.xzdz view image{
  width: 10rpx;
  height: 16rpx;
}
.xzdz label{
  padding-left: 20rpx;
}
.xzdz label input{
  font-size: 28rpx;
  color: #333;
  padding-left: 50rpx;
}
.xzdz1{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
.xzdz1 label{
  flex: 0;
}
.save{
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
  font-size: 28rpx;
  padding-left: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.save image{
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #e8e8e8;
  margin-right: 10rpx;
}
.sure{
  width: 628rpx;
  margin: 0 auto;
  height: 80rpx;
  background: rgb(114, 112, 112);
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.sure:hover{
  background: rgb(240, 81, 81)
}