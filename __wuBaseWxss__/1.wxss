button,button.default {
    background: #fff;
    font-size: 32rpx;
    color: #333;
    text-align: center;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid #dbdbdb;
    border-radius: 4rpx;
    padding: 0;
}

button::after {
    border: none;
}

button.primary {
    background: linear-gradient(to bottom,#ffd05c,#febf2b);
    border: none;
}

button.disabled {
    border: none;
    background: #ccc;
    color: #fff;
}

button.lg {
    width: 690rpx;
    height: 90rpx;
    display: flex;
}

button.big {
    min-width: 240rpx;
    height: 70rpx;
    font-size: 28rpx;
}

button.md {
    width: 184rpx;
    height: 64rpx;
    font-size: 24rpx;
}

button.mdS {
    width: 168rpx;
    height: 64rpx;
    font-size: 24rpx;
}

button.sm {
    width: 100rpx;
    height: 46rpx;
    font-size: 24rpx;
}

.dotDes {
    position: relative;
}

.dotDes::before,.dotDes::after {
    position: absolute;
    bottom: -18rpx;
    content: '';
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #f4f4f4;
}

.dotDes::before {
    left: -42rpx;
}

.dotDes::after {
    right: -42rpx;
}

.fix-iphonex-wrap {
    padding-bottom: 68rpx;
}

.fix-iphonex-button {
    bottom: 68rpx!important;
}

.fix-iphonex-button::after {
    content: '';
    display: block;
    height: 70rpx!important;
    width: 100%;
    position: fixed;
    bottom: 0!important;
    background: #f4f4f4;
}