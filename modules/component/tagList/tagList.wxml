<view class="tagsContainer">
    <view class="tagRow">
        <view bindtap="chooseItem" class="tagItem {{selectedType.id==item.id?'selected':''}} {{item.disabled?'disabled':''}}" data-value="{{item}}" style="width: {{tagWidth}}" wx:if="{{index<3}}" wx:for="{{tagList}}" wx:key="{{item.id}}">{{item.text}}</view>
    </view>
    <view class="tagRow" wx:if="{{tagList.length>3}}">
        <view bindtap="chooseItem" class="tagItem {{selectedType.id==item.id?'selected':''}} {{item.disabled?'disabled':''}}" data-value="{{item}}" style="width: {{tagWidth}}" wx:if="{{index>=3&&index<6}}" wx:for="{{tagList}}" wx:key="{{item.id}}">{{item.text}}</view>
    </view>
    <view class="tagRow" wx:if="{{tagList.length>6}}">
        <view bindtap="chooseItem" class="tagItem {{selectedType.id==item.id?'selected':''}} {{item.disabled?'disabled':''}}" data-value="{{item}}" style="width: {{tagWidth}}" wx:if="{{index>=6&&index<9}}" wx:for="{{tagList}}" wx:key="{{item.id}}">{{item.text}}</view>
    </view>
    <view class="tagRow" wx:if="{{tagList.length>9}}">
        <view bindtap="chooseItem" class="tagItem {{selectedType.id==item.id?'selected':''}} {{item.disabled?'disabled':''}}" data-value="{{item}}" style="width: {{tagWidth}}" wx:if="{{index>=9&&index<12}}" wx:for="{{tagList}}" wx:key="{{item.id}}">{{item.text}}</view>
    </view>
    <view class="tagRow" wx:if="{{tagList.length>12}}">
        <view bindtap="chooseItem" class="tagItem {{selectedType.id==item.id?'selected':''}} {{item.disabled?'disabled':''}}" data-value="{{item}}" style="width: {{tagWidth}}" wx:if="{{index>=12&&index<15}}" wx:for="{{tagList}}" wx:key="{{item.id}}">{{item.text}}</view>
    </view>
</view>
